/* pages/playlist/index.wxss */
.music-list {
    display: flex;
}
.music-inline {
  width: 100%;
  height: 100rpx;
  display: flex;
}
image {
  margin: auto 0;
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
}
.music-name {
  font-size: small;
  width: 400rpx;
  margin: auto 0;
  padding-left: 10rpx;
  overflow: hidden;
  /* 内容末尾追加省略号。 */
  text-overflow: ellipsis;
  /* 使用自适应布局方式显示 */
  display: -webkit-box;
  /* 限定最多 2 行 */
  -webkit-line-clamp: 1;
  /* 垂直方向超出隐藏 */
  -webkit-box-orient: vertical;
}

